<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<!-- 自定义带Divider分割线的LinearLayout的属性 -->
	<declare-styleable name="LinearLayout">
		<attr name="linearDivider" format="reference|color" />
		<attr name="linearShowDividers">
			<flag name="none" value="0" />
			<flag name="beginning" value="1" />
			<flag name="middle" value="2" />
			<flag name="end" value="4" />
		</attr>
		<attr name="linearDividerPadding" format="dimension" />
		<attr name="linearMeasureWithLargestChild" format="boolean"/>
		<attr name="linearDividerWidth" format="dimension"/>
		<attr name="linearDividerHeight" format="dimension"/>
    </declare-styleable>
    
	<declare-styleable name="DraggableListView">
		<attr name="draggableTriggerType">
			<flag name="shortpress" value="0" />
			<flag name="longpress" value="1" />
		</attr>
		<attr name="needForeground" format="boolean" />
	</declare-styleable>
	
	
</resources>

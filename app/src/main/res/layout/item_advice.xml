<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/fragment_mask_black" >
	
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="10dp"
		android:paddingTop="3dp"
		android:paddingBottom="3dp"
		android:text="生活建议"
		android:textColor="@android:color/white"
		android:textSize="15sp" />
	<View
		android:layout_width="match_parent"
		android:layout_height="0.8dp"
		android:background="@android:color/white" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:orientation="horizontal"
		android:weightSum="2"
		android:paddingLeft="10dp"
		android:paddingRight="10dp" >
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical" >
			<TextView
				android:id="@+id/item_advice_dress"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:singleLine="true"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:textColor="@android:color/white"
				android:textSize="15sp"
				android:background="@drawable/advice_bg_selector" />
			<TextView
				android:id="@+id/item_advice_car"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:singleLine="true"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:textColor="@android:color/white"
				android:textSize="15sp"
				android:background="@drawable/advice_bg_selector" />
		</LinearLayout>
		<View
			android:layout_width="5dp"
			android:layout_height="10dp" />
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical" >
			<TextView
				android:id="@+id/item_advice_excercise"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:singleLine="true"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:textColor="@android:color/white"
				android:textSize="15sp"
				android:background="@drawable/advice_bg_selector" />
			<TextView
				android:id="@+id/item_advice_flu"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:singleLine="true"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:textColor="@android:color/white"
				android:textSize="15sp"
				android:background="@drawable/advice_bg_selector" />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
